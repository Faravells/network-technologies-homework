mixin createTable(header, data)
    table(border="1" cellspacing="0" cellpadding="3")
        tr
            each field in header
                th= field
        each row in data
            tr
                td= row.f1
                td= row.f2
                td= row.f3
                td= row.f4
                td= row.f5