mixin createMenu(menu, active)
    each value, key in menu
        if active == key
            a.active(href= value)= key
        else
            a(href= value)= key

mixin createMenuBuild(menu, active)
    each value, key in menu
        if key == 'Заповедники России'
            a(href= value)= key
            a.active(href="#")= active
        else
            a(href= value)= key

mixin createGallery(images)
    each pict in images
        if pict == 'Botchinskiy.jpg'
            div.gallery_item--big
                a(href= "description.html")
                    img(src= require("../images/" + pict))
        else
            if pict == 'Astrachanskiy.jpg'
                div.gallery_item--big
                    img(src= require("../images/" + pict))
            else
                div.gallery_item--small
                    img(src= require("../images/" + pict))

mixin makeLeftRightContent(list)
    each item in list
        div.small-card
            img(src= require("../images/" + item.image))
            h3= item.header
            p= item.text
                a(href="#") &hellip;

